<h2 class="govuk-heading-m">
  <div class="govuk-hint govuk-!-margin-bottom-0">Step 2</div>
  <%= t(".header") %>
</h2>

<%= form.govuk_select :email_reason,
      Consultation::EMAIL_REASONS.index_by { t(it, scope: "consultee_email_component.email_reason") },
      label: {text: "Email type"} %>

<%= details_tag do %>
  <%= summary_tag do %>
    <%= t(".view_or_edit_email_template") %>
  <% end %>

  <%= wrapper_tag do %>
    <%= form_group_tag do %>
      <%= text_field_tag :consultee_message_subject, label: {text: t(".message_subject_label"), size: "s"}, autocomplete: "off" %>
    <% end %>

    <%= form_group_tag do %>
      <%= text_area_tag :consultee_message_body, rows: 25, label: {text: t(".message_body_label"), size: "s"} %>
    <% end %>

    <%= hint_tag do %>
      <%= t(".formatting_hint_html") %>
    <% end %>

    <%= button_tag do %>
      <%= t(".reset_message_to_default") %>
    <% end %>
  <% end %>
<% end %>
