<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      Forgot your password?
    </h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="govuk-form-group">
        <div class="field">
          <%= f.label :email, class: "govuk-label", for: "width-30"%>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "govuk-input govuk-input--width-30", type: "text" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "govuk-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>