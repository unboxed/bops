<% add_parent_breadcrumb_link "Home", planning_applications_path %>
<% add_parent_breadcrumb_link "Application", validate_form_planning_application_path(@planning_application) %>
<% add_parent_breadcrumb_link "Validation requests", planning_application_validation_requests_path(@planning_application) %>

<% content_for :title, "Send a validation request" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with url: planning_application_validation_requests_path, local: true do |form| %>
      <% if flash["error"].present? %>
        <span id="status-error" class="govuk-error-message">
          <%= flash["error"] %>
        </span>
      <% end %>
      <div class="govuk-form-group <%= flash["error"].present? ? 'govuk-form-group--error' : '' %>">
        <fieldset class="govuk-fieldset">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
              Send a validation request
            </h1>
          </legend>
          <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">
            <% options_for_new_request_validations.each do |value, name| %>
              <div class="govuk-radios__item">
                <%= form.radio_button :validation_request, value, class: "govuk-radios__input" %>
                <%= form.label :validation_request, name, value: value, class: "govuk-label govuk-radios__label" %>
              </div>
            <% end %>
          </div>
        </fieldset>
      </div>

      <div class="govuk-button-group">
        <%= form.submit "Next", class: "govuk-button" %>
        <%= link_to "Back", planning_application_validation_requests_path(@planning_application, part: @part), class: "govuk-button govuk-button--secondary" %>
      </div>
    <% end %>
  </div>
</div>
