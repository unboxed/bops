<% content_for :page_title do %>
  Replacement document validation request - <%= t('page_title') %>
<% end %>

<% add_parent_breadcrumb_link "Home", planning_applications_path %>
<% add_parent_breadcrumb_link "Application", planning_application_path(@planning_application) %>
<% add_parent_breadcrumb_link "Validation tasks", planning_application_validation_tasks_path(@planning_application) %>
<% content_for :title, "Replacement document validation request" %>

<%= render(
  partial: "shared/proposal_header",
  locals: { heading: "View request for a replacement document"  }
) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h3 class="govuk-heading-s">
      Officer request
    </h3>
    <div class="govuk-inset-text" id="replacement-document-details">
      <p class="govuk-body">
        Replacement for: <%= @replacement_document_validation_request.old_document.name %>
      </p>
      <p class="govuk-body">
        Reason: <%= render(FormattedContentComponent.new(text: @replacement_document_validation_request.invalidated_document_reason)) %>
      </p>
      <p class="govuk-body">
        <%= @replacement_document_validation_request.created_at.to_formatted_s(:day_month_year) %>
      </p>
    </div>

    <% if new_document = @replacement_document_validation_request.new_document %>
      <p class="govuk-body">
        A replacement document has been provided for this request:
      </p>
      <p class="govuk-body">
        <%= link_to "Check document - #{new_document.name.to_s}",
          edit_planning_application_document_path(@planning_application, new_document, validate: "yes"), class: "govuk-link" %>
      </p>
    <% end %>

    <%= render "shared/validation_request_show_actions",
        planning_application: @planning_application, validation_request: @replacement_document_validation_request %>
  </div>
</div>
