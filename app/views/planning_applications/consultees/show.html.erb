<% content_for :page_title do %>
  View consultee response - <%= t('page_title') %>
<% end %>

<% add_parent_breadcrumb_link "Home", root_path %>
<% add_parent_breadcrumb_link "Application", planning_application_path(@planning_application) %>
<% add_parent_breadcrumb_link "Consultation", planning_application_consultation_path(@planning_application) %>
<% add_parent_breadcrumb_link "Consultee responses", planning_application_consultees_responses_path(@planning_application) %>
<% content_for :title, "View consultee response" %>

<%= render(
  partial: "shared/proposal_header",
  locals: { heading: "View consultee response" }
) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <ul>
      <% @consultee.responses.each do |response| %>
        <li><%= @consultee.name %>: <%= link_to "Redact and publish", edit_planning_application_consultee_response_path(@planning_application, @consultee, response), class: "govuk-link" %> </li>
      <% end %>
    </ul>

    <div class="govuk-button-group govuk-!-margin-top-5">
      <%= link_to "Back", planning_application_consultees_responses_path(@planning_application), class: "govuk-button govuk-button--secondary" %>
    </div>
  </div>
</div>
