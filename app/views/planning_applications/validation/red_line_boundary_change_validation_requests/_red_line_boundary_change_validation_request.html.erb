<td class="govuk-table__cell change-request-list">
  Red line boundary changes
</td>
<% if red_line_boundary_change_validation_request.cancelled? %>
  <td class="govuk-table__cell change-request-list">
    <%= render(FormattedContentComponent.new(text: red_line_boundary_change_validation_request.reason)) %>
  </td>
<% else %>
  <td class="govuk-table__cell change-request-list">
    <%= link_to "View request red line boundary", planning_application_validation_red_line_boundary_change_validation_request_path(@planning_application, red_line_boundary_change_validation_request), class: "govuk-link" %>
  </td>
<% end %>
