<%= render(
  partial: "shared/proposal_header",
  locals: { heading: "Applicant approved proposed digital red line boundary"  }
) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h2 class="govuk-heading-m govuk-!-padding-top-6">
      Proposed red line boundary
    </h2>

    <%= render "shared/location_map", locals: { geojson: @validation_request.new_geojson } %>

    <%= govuk_inset_text do %>
      <% if @validation_request.auto_closed? %>
        <strong>Change to red line boundary was auto closed and approved after being open for more than 5 business days</strong>
      <% else %>
        <strong>Change to red line boundary has been approved by the applicant</strong>
      <% end %>
    <% end %>

    <div class="govuk-button-group">
      <%= back_link %>
    </div>
  </div>
</div>
