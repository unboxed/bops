<% content_for :page_title do %>
  Cancel replacement document validation request - <%= t("page_title") %>
<% end %>

<%= render "planning_applications/validation/validation_requests/validation_requests_breadcrumbs" %>

<% content_for :title, "Cancel validation request" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-!-padding-top-6">
      Cancel validation request
    </h1>

    <h2>
      Replacement document request to be cancelled
    </h2>

    <h3>
      You requested
    </h3>

    <div class="govuk-inset-text">
      <p>
        <strong>Replacement for:
        <%= link_to_document @validation_request.old_document.name, @validation_request.old_document %>
        </strong>
      </p>
      <p>
        Reason: <%= render(FormattedContentComponent.new(text: @validation_request.invalidated_document_reason)) %>
      </p>
      <p>
      <%= @validation_request.created_at.to_fs %>
      </p>
    </div>

    <div class="govuk-warning-text">
      <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
      <strong class="govuk-warning-text__text">
        <span class="govuk-warning-text__assistive">Warning</span>
        The existing version of this document will continue to be used for this application after this request is cancelled.
      </strong>
    </div>

    <%= render "planning_applications/validation/validation_requests/cancel_confirmation_form",
          validation_request: @validation_request %>
  </div>
</div>
