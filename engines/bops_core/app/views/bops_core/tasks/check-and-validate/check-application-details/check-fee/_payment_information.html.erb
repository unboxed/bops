<h3 class="govuk-heading-m govuk-!-margin-top-6">Payment information</h3>
<%= govuk_table(classes: "govuk-!-margin-bottom-6") do |table| %>
  <% table.with_body do |body| %>
    <% body.with_row do |row| %>
      <% row.with_cell(header: true, text: "Fee paid") %>
      <% row.with_cell(text: number_to_currency(planning_application.payment_amount || 0, unit: "Â£")) %>
    <% end %>
    <% body.with_row do |row| %>
      <% row.with_cell(header: true, text: "Payment reference") %>
      <% row.with_cell(text: planning_application.payment_reference || "Exempt") %>
    <% end %>
    <% body.with_row do |row| %>
      <% row.with_cell(header: true, text: "Session ID") %>
      <% row.with_cell(text: planning_application.session_id) %>
    <% end %>
  <% end %>
<% end %>
