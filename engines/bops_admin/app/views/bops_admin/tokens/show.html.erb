<% content_for :page_title do %>
  <%= t(".add_token") %> - <%= t("page_title") %>
<% end %>

<% add_parent_breadcrumb_link "Home", root_path %>
<% add_parent_breadcrumb_link "API tokens", tokens_path %>

<% content_for :title, t(".add_token") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-quarter">
    <%= render "side_navigation", current: "tokens" %>
  </div>
  <div class="govuk-grid-column-three-quarters">
    <%= govuk_panel(title_text: t(".new_token_title")) do %>
      <% if @token.bearer_authentication? %>
        <%= t(".new_bearer_token_body_html", token: @token.value) %>
      <% else %>
        <%= t(".new_hmac_token_body_html", url: bops_submissions.v2_submissions_url(@token.sqid, schema: "planning-portal")) %>
      <% end %>
    <% end %>

    <% if @token.bearer_authentication? %>
      <p>
        <%= t(".new_token_warning") %>
      </p>
    <% end %>

    <p>
      <%= govuk_link_to t(".back_to_token_list"), tokens_path %>
    </p>
  </div>
</div>
