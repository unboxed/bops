<% content_for :page_title do %>
  <%= t(".manage_constraints") %> - <%= t("page_title") %>
<% end %>

<% add_parent_breadcrumb_link "Home", root_path %>

<% add_parent_breadcrumb_link "Constraints", constraints_path %>

<% content_for :title, t(".manage_constraints") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-quarter">
    <%= render "side_navigation", current: "constraints" %>
  </div>
  <div class="govuk-grid-column-three-quarters">
    <h1><%= t(".manage_constraints") %></h1>

    <%= govuk_table(id: "policy-areas") do |table| %>
      <% table.with_head do |head| %>
        <% head.with_row do |row| %>
          <% row.with_cell(text: t(".headings.description")) %>
          <% row.with_cell(text: t(".headings.actions"), classes: %w[govuk-!-text-align-right]) %>
        <% end %>
      <% end %>

      <% table.with_body do |body| %>
        <% if @constraints.present? %>
          <% @constraints.group_by(&:category).each do |category, constraints| %>
            <% body.with_row do |row| %>
              <% row.with_cell(colspan: 2) do %>
                <label class="govuk-hint"><%= category.humanize %></label>
              <% end %>
            <% end %>
            <% constraints.each do |constraint| %>
              <% body.with_row do |row| %>
                <% row.with_cell(text: constraint.type_code) %>
                <% row.with_cell(classes: %w[govuk-!-text-align-right govuk-!-text-wrap-nowrap]) do |cell| %>
                  <%= govuk_link_to t(".actions.edit"), edit_constraint_path(constraint), no_visited_state: true, no_underline: true %>
                  <%= govuk_link_to t(".actions.delete"), constraint_path(constraint), no_visited_state: true, no_underline: true, class: "govuk-!-margin-left-1", method: :delete, data: {confirm: t(".are_you_sure")} %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        <% else %>
          <% body.with_row do |row| %>
            <% row.with_cell(text: t(".no_constraints_found"), colspan: 3) %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    <%= govuk_link_to t(".add_constraint"), new_constraint_path, no_visited_state: true %>

    <%= govuk_pagination(pagy: @pagy) if @pagy.pages > 1 %>
  </div>
</div>
