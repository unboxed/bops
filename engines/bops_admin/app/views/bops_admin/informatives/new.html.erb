<% content_for :page_title do %>
  <%= t(".add_informative") %> - <%= t("page_title") %>
<% end %>

<% add_parent_breadcrumb_link "Home", root_path %>
<% add_parent_breadcrumb_link "Informatives", informatives_path %>

<% content_for :title, t(".add_informative") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-quarter">
    <%= render "side_navigation" %>
  </div>
  <div class="govuk-grid-column-three-quarters">
    <h1 class="govuk-heading-l">
      <%= t(".add_informative") %>
    </h1>

    <%= form_with model: @informative, url: informatives_path, scope: :informative do |form| %>
      <%= render "form", form: form %>
    <% end %>
  </div>
</div>
