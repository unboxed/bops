<% content_for :page_title do %>
  <%= t(".edit_user") %> - <%= t("page_title") %>
<% end %>

<% add_parent_breadcrumb_link "Home", root_path %>
<% add_parent_breadcrumb_link "Users", users_path %>

<% content_for :title, t(".edit_user") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-quarter">
    <%= render "side_navigation", current: "users" %>
  </div>
  <div class="govuk-grid-column-three-quarters">
    <h1>
      <%= t(".edit_user") %>
    </h1>

    <% if @user.unconfirmed? %>
      <div class="govuk-button-group">
        <%= button_to t(".resend_invite"), resend_invite_user_path(@user), method: :post, class: "govuk-button" %>
      </div>
    <% end %>

    <%= render "shared/users/form", local_authority: nil, show_role: true %>
  </div>
</div>
