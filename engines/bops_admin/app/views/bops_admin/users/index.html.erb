<% content_for :page_title do %>
  <%= t(".users") %> - <%= t("page_title") %>
<% end %>

<% add_parent_breadcrumb_link "Home", root_path %>

<% content_for :title, t(".users") %>

<% if @users.any?(&:unconfirmed?) %>
  <%= render "shared/users/status_prompt", users: @users.unconfirmed, message: "Resend invites to unconfirmed users to add them to your team." %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-quarter">
    <%= render "side_navigation", current: "users" %>
  </div>
  <div class="govuk-grid-column-three-quarters">
    <h1>
      <%= t(".users") %>
    </h1>
    <%= render "shared/users/tabs", users: @users, local_authority: nil, show_role: true %>
    <div class="govuk-button-group">
      <%= govuk_button_link_to t(".add_user"), new_user_path %>
      <%= back_link %>
    </div>
  </div>
</div>
