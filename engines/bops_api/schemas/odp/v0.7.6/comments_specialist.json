{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "pagination",
    "data"
  ],
  "properties": {
    "pagination": {
      "$ref": "#/definitions/PostSubmissionPagination"
    },
    "data": {
      "type": "object",
      "required": [
        "summary",
        "comments"
      ],
      "properties": {
        "summary": {
          "type": "object",
          "required": [
            "totalComments",
            "totalConsulted",
            "sentiment"
          ],
          "properties": {
            "totalComments": {
              "type": "integer"
            },
            "totalConsulted": {
              "type": "integer"
            },
            "sentiment": {
              "type": "object",
              "properties": {
                "approved": {
                  "type": "integer"
                },
                "amendmentsNeeded": {
                  "type": "integer"
                },
                "objected": {
                  "type": "integer"
                }
              }
            }
          }
        },
        "comments": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "firstConsultedAt",
              "comments"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "organisationSpecialism": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "jobTitle": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "reason": {
                "type": "string"
              },
              "firstConsultedAt": {
                "type": [
                  "string",
                  "null"
                ],
                "format": "date-time"
              },
              "constraints": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              },
              "comments": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "id",
                    "sentiment",
                    "commentRedacted",
                    "metadata"
                  ],
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "sentiment": {
                      "type": "string"
                    },
                    "commentRedacted": {
                      "type": "string"
                    },
                    "files": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "metadata": {
                      "type": "object",
                      "required": [
                        "submittedAt"
                      ],
                      "properties": {
                        "submittedAt": {
                          "type": [
                            "string",
                            "null"
                          ],
                          "format": "date-time"
                        },
                        "validatedAt": {
                          "type": [
                            "string",
                            "null"
                          ],
                          "format": "date-time"
                        },
                        "publishedAt": {
                          "type": [
                            "string",
                            "null"
                          ],
                          "format": "date-time"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}