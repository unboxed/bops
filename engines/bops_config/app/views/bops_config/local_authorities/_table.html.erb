<table class="govuk-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header">Local authority</th>
      <th scope="col" class="govuk-table__header">Council code</th>
      <th scope="col" class="govuk-table__header">Notify setup</th>
      <th scope="col" class="govuk-table__header">Date created</th>
      <th scope="col" class="govuk-table__header">Last updated</th>
      <th scope="col" class="govuk-table__header">Onboarding progress</th>
    </tr>
  </thead>

  <tbody class="govuk-table__body">
    <% local_authorities.each do |local_authority| %>
        <tr class="govuk-table__row">
            <td class="govuk-table__cell">
                <%= govuk_link_to local_authority.short_name, local_authority_path(local_authority) %>
            </td>
            <td class="govuk-table__cell">
                <%= local_authority.council_code %>
            </td>
            <td class="govuk-table__cell">
                <%= local_authority.notify_api_key ? "Yes" : "No" %>
             </td>
            <td class="govuk-table__cell">
                <%= local_authority.created_at.to_fs(:day_month_year_slashes) %>
            </td>
            <td class="govuk-table__cell">
                <%= local_authority.updated_at.to_fs(:day_month_year_slashes) %>
            </td>
            <td class="govuk-table__cell">
                <%= local_authority.onboarding_status %>
            </td>
        </tr>
    <% end %>
  </tbody>
</table>
