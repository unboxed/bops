<% content_for :page_title do %>
  <%= t(".check_letter_settings") %> - <%= t("page_title") %>
<% end %>

<% add_parent_breadcrumb_link "Home", root_path %>
<% add_parent_breadcrumb_link "Local authorities", local_authorities_path %>
<% add_parent_breadcrumb_link @local_authority.short_name, local_authority_path(@local_authority) %>
<% add_parent_breadcrumb_link "GOV.UK Notify Settings", edit_local_authority_notify_path(@local_authority) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      <%= t(".check_letter_settings") %>
    </h1>

    <div class="govuk-warning-text">
      <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
      <strong class="govuk-warning-text__text">
        <span class="govuk-visually-hidden">
          <%= t(".warning.heading") %>
        </span>
        <%= t(".warning.message") %>
      </strong>
    </div>

    <%= form_with(model: @letter_form, url: local_authority_notify_letter_path(@local_authority), id: "notify-form") do |form| %>
      <%= form.govuk_error_summary %>

      <%= form.govuk_text_area(
            :address, rows: 5,
            label: {text: t(".labels.address")},
            hint: {text: t(".hints.address")}
          ) %>

      <%= form.govuk_text_field(
            :heading,
            label: {text: t(".labels.heading")}
          ) %>

      <%= form.govuk_text_area(
            :message, rows: 7,
            label: {text: t(".labels.message")}
          ) %>

      <% if @letter_form.checked? %>
        <%= form.govuk_submit(t(".buttons.continue"), name: "continue", value: "true") do %>
          <%= form.govuk_submit(t(".buttons.create_again"), secondary: true) %>
          <%= govuk_button_link_to t(".buttons.back"), new_local_authority_notify_sms_path(@local_authority), secondary: true %>
        <% end %>
      <% else %>
        <%= form.govuk_submit(t(".buttons.create")) do %>
          <%= form.govuk_submit(t(".buttons.skip"), name: "continue", value: "true", secondary: true) %>
          <%= govuk_button_link_to t(".buttons.back"), new_local_authority_notify_sms_path(@local_authority), secondary: true %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
