<% content_for :page_title do %>
  <%= t(".edit_user") %> - <%= t("page_title") %>
<% end %>

<% add_parent_breadcrumb_link "Home", root_path %>
<% add_parent_breadcrumb_link "Local authorities", local_authorities_path %>
<% add_parent_breadcrumb_link @local_authority.short_name, local_authority_path(@local_authority) %>
<% add_parent_breadcrumb_link "Users", local_authority_users_path(@local_authority) %>

<% content_for :title, t(".edit_user") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1>
      <%= t(".edit_user") %>
    </h1>

    <% if @user.unconfirmed? %>
      <div class="govuk-button-group">
        <%= button_to t(".resend_invite"), resend_invite_local_authority_user_path(@local_authority, @user), method: :post, class: "govuk-button" %>
      </div>
    <% end %>

    <%= render "shared/users/form", local_authority: @local_authority, show_role: true %>
  </div>
</div>
