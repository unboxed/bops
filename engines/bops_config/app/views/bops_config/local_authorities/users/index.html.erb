<% content_for :page_title do %>
  <%= t(".users", name: @local_authority.short_name) %> - <%= t("page_title") %>
<% end %>

<% add_parent_breadcrumb_link "Home", root_path %>
<% add_parent_breadcrumb_link "Local authorities", local_authorities_path %>
<% add_parent_breadcrumb_link @local_authority.short_name, local_authority_path(@local_authority) %>

<% content_for :title, t(".users", name: @local_authority.short_name) %>

<% if @users.any?(&:unconfirmed?) %>
  <%= render "shared/users/status_prompt", users: @users.unconfirmed %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1>
      <%= t(".users", name: @local_authority.short_name) %>
    </h1>
    <%= render "shared/users/tabs", users: @users, local_authority: @local_authority, show_role: true %>
    <div class="govuk-button-group">
      <%= govuk_button_link_to(t(".add_user"), new_local_authority_user_path(@local_authority)) %>
      <%= back_link %>
    </div>
  </div>
</div>
