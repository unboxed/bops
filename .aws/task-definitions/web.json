{
  "containerDefinitions": [
    {
      "name": "bops",
      "image": "bops/preview:latest",
      "command": ["bundle", "exec", "rails", "server"],
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp",
          "hostPort": 3000
        },
        {
          "hostPort": 22,
          "protocol": "tcp",
          "containerPort": 22
        }
      ],
      "memory": 300,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "bops-web-preview",
          "awslogs-region": "eu-west-2",
          "awslogs-stream-prefix": "web"
        }
      },
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "RACK_ENV",
          "value": "production"
        },
        {
          "name": "RAILS_ENV",
          "value": "production"
        },
        {
          "name": "RAILS_LOG_TO_STDOUT",
          "value": "true"
        },
        {
          "name": "RAILS_SERVE_STATIC_FILES",
          "value": "true"
        },
        {
          "name": "S3_BUCKET",
          "value": "bops-preview-uploads"
        }
      ],
      "secrets": [
        {
          "name": "SECRET_KEY_BASE",
          "valueFrom": "arn:aws:ssm:eu-west-2:735309401039:parameter/bops/preview/SECRET_KEY_BASE"
        },
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:eu-west-2:735309401039:parameter/bops/preview/DATABASE_URL"
        },
        {
          "name": "SSH_PUBLIC_KEYS",
          "valueFrom": "arn:aws:ssm:eu-west-2:735309401039:parameter/bops/preview/SSH_PUBLIC_KEYS"
        },
        {
          "name": "NOTIFY_API_KEY",
          "valueFrom": "arn:aws:ssm:eu-west-2:735309401039:parameter/bops/preview/NOTIFY_API_KEY"
        }
      ]
    }
  ],
  "executionRoleArn": "bops-ecs-task-execution-preview",
  "taskRoleArn": "bops-ecs-task-preview",
  "family": "bops-web-preview",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512"
}
